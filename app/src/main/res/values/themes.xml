<resources>
    <!-- Base application theme with Material 3 -->
    <style name="Theme.IndosamSportsArena" parent="Theme.Material3.DayNight">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/purple_700</item>

        <!-- Typography -->
        <item name="textAppearanceHeadlineMedium">
            @style/TextAppearance.IndosamSportsArena.Headline
        </item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.IndosamSportsArena.Body</item>

        <!-- Rounded Corners for Buttons & Cards -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.RoundedCorners</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowSplashScreenBackground">#FFFFFF</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimationDuration">2500</item>
    </style>


    <!-- Typography Styles -->
    <style name="TextAppearance.IndosamSportsArena.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.IndosamSportsArena.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>
</resources>
